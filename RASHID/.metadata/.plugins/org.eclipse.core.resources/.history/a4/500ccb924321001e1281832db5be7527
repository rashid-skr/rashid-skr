SUBROUTINE CUS.CHECK.RCD.RTN
    $INSERT I_COMMON
    $INSERT I_EQUATE
    
    $USING EB.SystemTables
    $USING ST.Customer



    THIS.OPERATOR.OK =''
    IF NOT (EB.SystemTables.getRNew(ST.Customer.Customer.EbCusInputter)) THEN RETURN
    IF NOT (EB.SystemTables.getRNew(ST.Customer.Customer.EbCusRecordStatus)) THEN RETURN
    Y.INPUTTER =EB.SystemTables.getRNew(ST.Customer.Customer.EbCusInputter)
    IF FIELD (INPUTTER,'_',2) EQ EB.SystemTables.getOperator() THEN
        THIS.OPERATOR.OK = 1
    END ELSE
        AUTHORISER =EB.SystemTables.getRNew(ST.Customer.Customer.EbCusAuthoriser)
        IF FIELD (AUTHORISER ,'_',2) EQ EB.SystemTables.getOperator() THEN
            THIS.OPERATOR.OK = 1
        END
    END
    IF NOT(THIS.OPERATOR.OK) THEN
        EB.SystemTables.setE('Access Restricted’)


    END
RETURN
END
