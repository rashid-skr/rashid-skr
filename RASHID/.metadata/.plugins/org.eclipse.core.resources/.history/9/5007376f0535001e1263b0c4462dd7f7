*AA.Framework.GetArrangementConditions(ArrangementId,PROP.CLASS.TRM,'PRINCIPALINT','',RETURN.IDS.TRM,RETURN.VALUES.TRM,ERR.MSG.TRM)
*PROP.CLASS.TRMT= 'COMMITMENT'
        
* AA.Framework.GetArrangementConditions(ArrangementId,PROP.CLASS.TRM,'PRINCIPALINT','',RETURN.IDS.TRM,RETURN.VALUES.TRM,ERR.MSG.TRM)
    PROP.CLASS.TRMT= 'ACCOUNT'
*AA.Framework.GetArrangementConditions(ArrangementId,PROP.CLASS.TRM,'PRINCIPALINT','',RETURN.IDS.TRM,RETURN.VALUES.TRM,ERR.MSG.TRM)
    AA.Framework.GetArrangementConditions(arrId,"",'PROP.CLASS.TRMT','',RETURN.IDS.TRM,RETURN.VALUES.TRM,ERR.MSG.TRM)
    writeData = arrId:'*':RETURN.VALUES.TRM
    FileName = 'ACCOUNT.txt'
    FilePath = 'D:\NMBT\Temenos\t24home\default\DD.IN'
    OPENSEQ FilePath,FileName TO FileOutput THEN NULL
    ELSE
        CREATE FileOutput ELSE
        END
    END
    WRITESEQ writeData APPEND TO FileOutput ELSE
